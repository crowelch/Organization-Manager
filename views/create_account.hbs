<form method="POST" onsubmit="return validateInputs()">
	<div class="form-group">
		<label for="fname" class="col-sm-3 control-label">First Name:</label>
		<div class="col-sm-7">
			<input type="text" name="fname" id="fname" placeholder="Luke" class="form-control">
		</div>
	</div>
	<div class="form-group">
		<label for="lname" class="col-sm-3 control-label">Last Name:</label>
		<div class="col-sm-7">
			<input type="text" name="lname" id="lname" placeholder="Skywalker" class="form-control">
		</div>
	</div>
	<div class="form-group">
		<label for="email" class="col-sm-3 control-label">UC Email:</label>
		<div class="col-sm-7">
			<input type="text" name="email" id="email" placeholder="skywalla@mail.uc.edu" class="form-control">
		</div>
	</div>
	<div class="form-group">
		<label for="mnumber" class="col-sm-3 control-label">M#:</label>
		<div class="col-sm-7">
			<input type="text" name="mnumber" id="mnumber" placeholder="M8675309" class="form-control">
		</div>
	</div>
	<div class="form-group">
		<label for="college" class="col-sm-3 control-label">College:</label>
		<div class="col-sm-7">
			<input type="text" name="college" id="college" placeholder="CEAS" class="form-control">
		</div>
	</div>
	<div class="form-group">
		<label for="major" class="col-sm-3 control-label">Major:</label>
		<div class="col-sm-7">
			<input type="text" name="major" id="major" placeholder="Computer Science" class="form-control">
		</div>
	</div>
	<div class="form-group">
		<label for="gradYear" class="col-sm-3 control-label">Graduation Year:</label>
		<div class="col-sm-7">
			<input type="text" name="gradYear" id="gradYear" placeholder="1998" class="form-control">
		</div>
	</div>
	<div class="form-group">
		<label for="card" class="col-sm-3 control-label">Swipe Card:</label>
		<div class="col-sm-7">
			<input type="text" name="card" id="card" placeholder="asdfghjkl;" class="form-control">
		</div>
	</div>
	<div class="col-sm-offset-3 col-sm-7">
    	<button type="submit" class="btn btn-success">
    		<span class="fa fa-user-plus">
    		</span>
    		Signup
    	</button>
    </div>
<form>

<script>
	function validateInputs() {
		var fname = $('#fname').val();
		var lname = $('#lname').val();
		var email = $('#email').val();
		var mnumber = $('#mnumber').val();
		var college = $('#college').val();
		var major = $('#major').val();
		var gradYear = $('#gradYear').val();
		var card = $('#card').val();

		if(fname === '') {
			console.log('empty fname');
		} else if(lname === '') {
			console.log('empty lname');
		} else if(email.toLowerCase().indexOf('uc.edu') < 0) {
			console.log('not a uc email');
		} else if(mnumber !== '') {
			console.log('no mnumber');
		} else if(college === '') {
			console.log('empty college');
		} else if(major === '') {
			console.log('empty major');
		} else if(gradYear === '') {
			console.log('empty grad year');
		} else if(card === '') {
			console.log('empty card');
		} else {
			return true;
		}

		return false;
	}
</script>
