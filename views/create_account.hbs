<form method="POST" onsubmit="return validateInputs()">
	<div class="form-group">
		<label for="firstName" class="col-sm-3 control-label">First Name:</label>
		<div class="col-sm-7">
			<input type="text" name="firstName" id="firstName" placeholder="Luke" class="form-control">
		</div>
	</div>
	<div class="form-group">
		<label for="lastName" class="col-sm-3 control-label">Last Name:</label>
		<div class="col-sm-7">
			<input type="text" name="lastName" id="lastName" placeholder="Skywalker" class="form-control">
		</div>
	</div>
	<div class="form-group">
		<label for="email" class="col-sm-3 control-label">UC Email:</label>
		<div class="col-sm-7">
			<input type="email" name="email" id="email" placeholder="skywalla@mail.uc.edu" class="form-control">
		</div>
	</div>
	<div class="form-group">
		<label for="phone" class="col-sm-3 control-label">Phone Number:</label>
		<div class="col-sm-7">
			<input type="tel" name="phone" id="phone" placeholder="513-867-5309" class="form-control">
		</div>
	</div>
	<div class="form-group">
		<label for="mNumber" class="col-sm-3 control-label">M#:</label>
		<div class="col-sm-7">
			<input type="text" name="mNumber" id="mNumber" placeholder="M8675309" class="form-control">
		</div>
	</div>
	<div class="form-group">
		<label for="college" class="col-sm-3 control-label">College:</label>
		<div class="col-sm-7">
			<input type="text" name="college" id="college" placeholder="CEAS" class="form-control">
		</div>
	</div>
	<div class="form-group">
		<label for="major" class="col-sm-3 control-label">Major:</label>
		<div class="col-sm-7">
			<input type="text" name="major" id="major" placeholder="Computer Science" class="form-control">
		</div>
	</div>
	<div class="form-group">
		<label for="gradLevel" class="col-sm-3 control-label">Undergraduate/Graduate(U/G):</label>
		<div class="col-sm-7">
			<select name="gradLevel" id="gradLevel">
				<option value="u" selected>U</option>
				<option value="g">G</option>
			</select>
		</div>
	</div>
	<div class="form-group">
		<label for="gradYear" class="col-sm-3 control-label">Graduation Year:</label>
		<div class="col-sm-7">
			<input type="text" name="gradYear" id="gradYear" placeholder="1998" class="form-control">
		</div>
	</div>
	<div class="form-group">
		<label for="card" class="col-sm-3 control-label">Swipe Card:</label>
		<div class="col-sm-7">
			<input type="text" name="card" id="card" placeholder="asdfghjkl;" class="form-control">
		</div>
	</div>
	<div class="col-sm-offset-3 col-sm-7">
    	<button type="submit" class="btn btn-success">
    		<span class="fa fa-user-plus">
    		</span>
    		Signup
    	</button>
    </div>
<form>

<script>
	function validateInputs() {
		var firstName = $('#firstName').val();
		var lastName = $('#lastName').val();
		var email = $('#email').val();
		var phone = $('#phone').val();
		var mNumber = $('#mNumber').val();
		var college = $('#college').val();
		var major = $('#major').val();
		var gradYear = $('#gradYear').val();
		var card = $('#card').val();

		if(firstName === '') {
			console.log('empty firstName');
		} else if(lastName === '') {
			console.log('empty lastName');
		} else if(email.toLowerCase().indexOf('uc.edu') < 0) {
			console.log('not a uc email');
		} else if(phone === '') {
			console.log('no phone');
		} else if(mNumber === '') {
			console.log('no mNumber');
		} else if(college === '') {
			console.log('empty college');
		} else if(major === '') {
			console.log('empty major');
		} else if(gradYear === '') {
			console.log('empty grad year');
		} else if(card === '') {
			console.log('empty card');
		} else {
			return true;
		}

		return false;
	}
</script>
